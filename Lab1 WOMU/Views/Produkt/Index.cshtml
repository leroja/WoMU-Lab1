@model IEnumerable<Lab1_WOMU.Models.Produkt>

@{
    ViewBag.Title = "Produkts";
}

<h2>Produkts</h2>

<p></p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProduktNamn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pris)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.ProduktNamn, "Details", new { id = item.ProduktID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pris)
        </td>
        <td>
            @Html.ActionLink("Buy", "Details", new { id = item.ProduktID })
        </td>
    </tr>
}

</table>
